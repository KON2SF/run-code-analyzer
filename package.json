{
    "name": "run-code-analyzer",
    "description": "GitHub Action to run the Salesforce Code Analyzer",
    "version": "2.4.0",
    "author": "The Salesforce Code Analyzer Team",
    "private": true,
    "homepage": "https://github.com/forcedotcom/run-code-analyzer",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/forcedotcom/run-code-analyzer.git"
    },
    "bugs": {
        "url": "https://github.com/forcedotcom/run-code-analyzer/issues"
    },
    "keywords": [
        "actions",
        "salesforce code analyzer"
    ],
    "exports": {
        ".": "./dist/index.js"
    },
    "engines": {
        "node": ">=20.9.0"
    },
    "scripts": {
        "bundle": "npm run format:write && npm run package",
        "ci-test": "jest",
        "coverage": "make-coverage-badge --output-path ./badges/coverage.svg",
        "format:write": "prettier --write **/*.ts",
        "format:check": "prettier --check **/*.ts",
        "lint": "npx eslint .",
        "package": "ncc build src/index.ts --license licenses.txt --out dist",
        "package:watch": "npm run package -- --watch",
        "show-coverage": "open ./coverage/lcov-report/index.html",
        "test": "jest",
        "all": "npm run format:write && npm run lint && npm run test && npm run coverage && npm run package"
    },
    "license": "BSD-3-Clause license",
    "jest": {
        "preset": "ts-jest",
        "verbose": true,
        "clearMocks": true,
        "testEnvironment": "node",
        "moduleFileExtensions": [
            "js",
            "ts"
        ],
        "testMatch": [
            "**/*.test.ts"
        ],
        "testPathIgnorePatterns": [
            "/node_modules/",
            "/dist/",
            "/dist_local/"
        ],
        "transform": {
            "^.+\\.ts$": "ts-jest"
        },
        "coverageReporters": [
            "json-summary",
            "text",
            "lcov"
        ],
        "collectCoverage": true,
        "collectCoverageFrom": [
            "./src/**"
        ]
    },
    "dependencies": {
        "@actions/artifact": "^2.3.2",
        "@actions/core": "^1.11.1",
        "@actions/exec": "^1.1.1",
        "@actions/github": "^6.0.1",
        "semver": "^7.7.2"
    },
    "devDependencies": {
        "@eslint/js": "^9.31.0",
        "@types/jest": "^30.0.0",
        "@types/node": "^22.16.4",
        "@types/semver": "^7.7.0",
        "@vercel/ncc": "^0.38.3",
        "eslint": "^9.31.0",
        "eslint-plugin-github": "^6.0.0",
        "eslint-plugin-jest": "^29.0.1",
        "eslint-plugin-jsonc": "^2.20.1",
        "eslint-plugin-prettier": "^5.5.1",
        "globals": "^16.3.0",
        "jest": "^30.0.4",
        "make-coverage-badge": "^1.2.0",
        "prettier": "^3.6.2",
        "prettier-eslint": "^16.4.2",
        "ts-jest": "^29.4.0",
        "typescript": "^5.8.3",
        "typescript-eslint": "^8.37.0"
    }
}
